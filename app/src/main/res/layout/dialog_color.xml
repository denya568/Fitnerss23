<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="3">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/colorSiteYolo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:src="@color/colorSiteYolo"
            app:riv_border_color="@color/blackw"
            app:riv_border_width="1dp"
            app:riv_corner_radius="18dp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/colorAccent"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:src="@color/colorAccent"
            app:riv_border_color="@color/blackw"
            app:riv_border_width="1dp"
            app:riv_corner_radius="18dp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/colorWhite"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:src="@color/colorWhite"
            app:riv_border_color="@color/blackw"
            app:riv_border_width="1dp"
            app:riv_corner_radius="18dp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/colorRed"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:src="@color/colorRed"
            app:riv_border_color="@color/blackw"
            app:riv_border_width="1dp"
            app:riv_corner_radius="18dp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/colorBlack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:src="@color/colorBlack"
            app:riv_border_color="@color/blackw"
            app:riv_border_width="1dp"
            app:riv_corner_radius="18dp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/colorGray"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:src="@color/colorGray"
            app:riv_border_color="@color/blackw"
            app:riv_border_width="1dp"
            app:riv_corner_radius="18dp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/colorSiteBlue"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:src="@color/colorSiteBlue"
            app:riv_border_color="@color/blackw"
            app:riv_border_width="1dp"
            app:riv_corner_radius="18dp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/colorSiteWhiteBlue"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:src="@color/colorSiteWhiteBlue"
            app:riv_border_color="@color/blackw"
            app:riv_border_width="1dp"
            app:riv_corner_radius="18dp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/colorSiteGreen"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:src="@color/colorSiteGreen"
            app:riv_border_color="@color/blackw"
            app:riv_border_width="1dp"
            app:riv_corner_radius="18dp" />

        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/blackw"
            android:id="@+id/exampleCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:weightSum="200">

                <TextView
                    android:id="@+id/tvExample"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:gravity="center|start"
                    android:text="Planner23 текст задания"
                    android:textColor="@color/colorWhite" />

                <ImageView
                    android:id="@+id/okExample"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="170"
                    android:src="@drawable/ic_check_circle_black_24dp"
                    android:tint="@color/colorSiteGreen" />


            </LinearLayout>

        </android.support.v7.widget.CardView>


    </GridLayout>

</LinearLayout>